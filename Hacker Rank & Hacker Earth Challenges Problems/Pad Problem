### https://www.hackerrank.com/challenges/the-pads/problem

select CONCAT(CONCAT(Name,'('),CONCAT(substr(Occupation,1,1),')')) from OCCUPATIONS ORDER BY Name;

SELECT CONCAT('There are a total of ',CONCAT(CONCAT(COUNT(*),' '),CONCAT(LOWER(Occupation),'s.'))) FROM OCCUPATIONS GROUP BY Occupation Order By COUNT(*),LOWER(Occupation);
